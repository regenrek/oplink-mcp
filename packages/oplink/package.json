{
  "name": "@oplink/core",
  "version": "0.0.8",
  "description": "MCP workflow orchestration and registry tool (provider-agnostic)",
  "type": "module",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "workflows",
    "prompts",
    "prompt engineering",
    "ai",
    "oplink"
  ],
  "contributors": [
    {
      "name": "Kevin Kern",
      "email": "kevin@instructa.org"
    }
  ],
  "bugs": "https://github.com/regenrek/oplink-mcp/issues",
  "license": "MIT",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:verbose": "NODE_ENV=development tsx src/server.ts",
    "inspect": "tsc && npx @modelcontextprotocol/inspector node -- dist/cli-entry.mjs",
    "build": "pnpm exec rolldown -c",
    "prepublishOnly": "pnpm run build",
    "update": "npm version patch && npm publish",
    "test": "vitest",
    "test:ci": "vitest run --reporter=dot",
    "cli:dist": "node dist/cli-entry.mjs --config ./.mcp-workflows"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@leeoniya/ufuzzy": "^1.0.19",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "dotenv": "^16.4.7",
    "js-yaml": "^4.1.0",
    "mcporter": "^0.4.1",
    "mri": "^1.2.0",
    "openai": "^4.91.1",
    "pathe": "^2.0.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@oplink/test-utils": "workspace:*",
    "@types/js-yaml": "catalog:types",
    "@types/node": "catalog:types",
    "@types/semver": "catalog:types",
    "c12": "catalog:utils",
    "ts-node": "^10.9.2",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "rolldown": "1.0.0-beta.49",
    "vitest": "catalog:testing"
  },
  "packageManager": "pnpm@10.6.3"
}
