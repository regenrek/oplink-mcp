{
  "name": "oplink",
  "version": "0.0.5",
  "description": "MCP workflow orchestration and registry tool for user-defined workflows",
  "type": "module",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "workflows",
    "prompts",
    "prompt engineering",
    "ai",
    "oplink"
  ],
  "contributors": [
    {
      "name": "Kevin Kern",
      "email": "kevin@instructa.org"
    }
  ],
  "bugs": "https://github.com/regenrek/oplink-mcp/issues",
  "license": "MIT",
  "exports": {
    ".": "./dist/index.mjs",
    "./cli": "./bin/oplink.mjs"
  },
  "bin": {
    "oplink": "bin/oplink.mjs"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "pnpm exec rolldown -c && node scripts/copy-schemas.mjs",
    "dev": "rolldown -c --watch",
    "prepublishOnly": "npm run build",
    "release": "npm publish",
    "release:alpha": "npm publish --tag alpha",
    "oplink": "node ./bin/oplink.mjs",
    "oplink-bun": "bun --bun ./dist/oplink.mjs",
    "test:dist": "node ./bin/oplink.mjs info ./playground"
  },
  "devDependencies": {
    "@oplink/test-utils": "workspace:*",
    "@types/js-yaml": "catalog:types",
    "@types/node": "catalog:types",
    "@types/semver": "catalog:types",
    "c12": "catalog:utils",
    "citty": "catalog:prod",
    "consola": "catalog:cli",
    "giget": "catalog:cli",
    "jiti": "catalog:cli",
    "magicast": "catalog:utils",
    "mri": "catalog:cli",
    "pathe": "catalog:prod",
    "rolldown": "1.0.0-beta.49",
    "typescript": "catalog:cli",
    "vitest": "catalog:testing"
  },
  "packageManager": "pnpm@10.6.3",
  "dependencies": {
    "@oplink/core": "^0.0.5",
    "@iarna/toml": "^2.2.5",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "js-yaml": "^4.1.0"
  }
}
