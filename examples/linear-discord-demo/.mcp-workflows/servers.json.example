{
  "servers": {
    "linear": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.linear.app/mcp"],
      "auth": "oauth",
      "clientName": "oplink-linear-demo",
      "tokenCacheDir": "./.tokens/linear",
      "description": "Linear hosted MCP server (OAuth)"
    },
    "discord": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@saseq/discord-mcp"],
      "env": {
        "DISCORD_BOT_TOKEN": "${DISCORD_BOT_TOKEN}"
      },
      "description": "Discord MCP server for sending messages via bot"
    }
  }
}
